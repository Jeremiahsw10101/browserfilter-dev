# =================================
# TOPAZ BACKEND ENVIRONMENT CONFIG
# =================================

# ---------------------------------
# OPENAI API CONFIGURATION
# ---------------------------------
# Required for AI content filtering functionality
OPENAI_API_KEY=your_openai_api_key_here

# ---------------------------------
# AUTH0 AUTHENTICATION CONFIG
# ---------------------------------
# Required for user authentication and OAuth
AUTH0_CLIENT_ID=your_auth0_client_id
AUTH0_SECRET=your_auth0_client_secret
AUTH0_ISSUER_BASE_URL=https://your-domain.auth0.com
AUTH0_BASE_URL=http://localhost:8000

# ---------------------------------
# SUPABASE DATABASE CONFIG
# ---------------------------------
# Required for user data and game scores
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# ---------------------------------
# SERVER CONFIGURATION
# ---------------------------------
# Optional: defaults to 8000 if not specified
PORT=8000
